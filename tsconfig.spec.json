{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",  // Cambia jasmine por jest
      "node"
    ],
    "esModuleInterop": true,  // Opcional si tienes problemas con imports
    "allowJs": true  // Necesario si est√°s usando archivos .js en tus tests
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}